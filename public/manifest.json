{
  "manifest_version": 3,
  "name": "财经新闻智能分析",
  "version": "1.0.0",
  "description": "AI驱动的财经新闻分析工具，帮助您快速理解市场动态",
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    },
    "default_title": "财经新闻智能分析"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}